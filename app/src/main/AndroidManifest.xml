<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Eyadcomp2000"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity" android:exported="false" />

        <activity
            android:name=".guestactivity"
            android:exported="false" />

        <activity
            android:name=".RestaurantMenuActivity"
            android:exported="false" />

        <activity android:name=".BookTableActivity"
            android:exported="false" />

        <activity android:name=".ChangeReservationActivity"
            android:exported="false" />

        <activity android:name=".StaffMenuActivity"
            android:exported="false" />

        <activity android:name=".ReservationsActivity"
            android:exported="false" />

        <activity android:name=".MenuItemsListActivity"
            android:exported="false" />

    </application>
</manifest>