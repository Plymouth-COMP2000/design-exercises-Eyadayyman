<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foodpic"
    tools:context=".BookTableActivity">

    <Button
        android:id="@+id/btn_back_booking"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#80000000"
        android:fontFamily="cursive"
        android:onClick="goBackToGuest"
        android:text="&lt;"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_book_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:background="#80000000"
        android:fontFamily="cursive"
        android:padding="6dp"
        android:text="Book a Table"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_back_booking"
        app:layout_constraintStart_toEndOf="@id/btn_back_booking"
        app:layout_constraintTop_toTopOf="@id/btn_back_booking"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="515dp"
        android:layout_marginTop="108dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_book_text">

        <EditText
            android:id="@+id/input_date"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="#80000000"
            android:fontFamily="cursive"
            android:hint="*DD/MM/YYYY:"
            android:inputType="date"
            android:paddingStart="15dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/input_time"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="#80000000"
            android:fontFamily="cursive"
            android:hint="*Time:"
            android:inputType="time"
            android:paddingStart="15dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/input_party_size"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="#80000000"
            android:fontFamily="cursive"
            android:hint="*Party Size:"
            android:inputType="number"
            android:paddingStart="15dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/input_phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="#80000000"
            android:fontFamily="cursive"
            android:hint="*Phone Number:"
            android:inputType="phone"
            android:paddingStart="15dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="25dp"
            android:background="#80000000"
            android:fontFamily="cursive"
            android:hint="*Name for order:"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_book_now"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:backgroundTint="#80000000"
            android:fontFamily="cursive"
            android:text="Book Now"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>