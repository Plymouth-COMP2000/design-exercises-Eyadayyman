<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foodpic"
    tools:context=".StaffMenuActivity">

    <FrameLayout
        android:id="@+id/notification_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="48dp"
        android:onClick="handleNotificationClick"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/notification_bell_icon"
            android:layout_width="39dp"
            android:layout_height="30dp"
            android:src="@drawable/bell" />

        <TextView
            android:id="@+id/notification_badge"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="top|end"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="1" />
    </FrameLayout>

    <Button
        android:id="@+id/reservations_button"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#80000000"
        android:fontFamily="cursive"
        android:onClick="openReservationsPage"
        android:text="Reservations"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notification_container" />

    <Button
        android:id="@+id/employee_guide_button"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#80000000"
        android:fontFamily="cursive"
        android:onClick="showEmployeeGuide"
        android:text="Employee Guide"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reservations_button" />

    <Button
        android:id="@+id/btn_read_only_menu"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#80000000"
        android:fontFamily="cursive"
        android:onClick="openReadOnlyMenu"
        android:text="View Restaurant Menu"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/employee_guide_button" />

    <Button
        android:id="@+id/add_edit_items_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#80000000"
        android:textColor="@android:color/white"
        android:fontFamily="cursive"
        android:onClick="openAddEditMenu"
        android:text="Manage Menu Items"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/btn_read_only_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/comments_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#80000000"
        android:textColor="@android:color/white"
        android:fontFamily="cursive"
        android:onClick="showComplaints"
        android:text="View comments"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/add_edit_items_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_view_staff"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#80000000"
        android:textColor="@android:color/white"
        android:fontFamily="cursive"
        android:text="View Staff List"
        android:onClick="viewStaffList"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/comments_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_delete_staff"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#80000000"
        android:textColor="@android:color/white"
        android:fontFamily="cursive"
        android:text="Delete Staff"
        android:onClick="openDeleteStaffDialog"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btn_view_staff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_view_guests"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#80000000"
        android:textColor="@android:color/white"
        android:fontFamily="cursive"
        android:onClick="viewGuestList"
        android:text="View Guest List"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btn_delete_staff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_delete_guest"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#80000000"
        android:textColor="@android:color/white"
        android:fontFamily="cursive"
        android:onClick="openDeleteGuestDialog"
        android:text="Delete Guest"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btn_view_guests"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>