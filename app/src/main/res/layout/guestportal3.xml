<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foodpic"
    tools:context=".BookTableActivity">

    <Button
        android:id="@+id/title_book_button"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:text="Book a Table"
        android:textColor="@android:color/white"
        android:fontFamily="cursive"
        android:background="#80000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/title_book_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp">

        <EditText
            android:id="@+id/input_date"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="25dp"
            android:hint="*DD/MM/YYYY:"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:fontFamily="cursive"
            android:background="#80000000"
            android:textSize="18sp"
            android:inputType="date"
            android:paddingStart="25dp"
            android:drawablePadding="10dp"
            android:paddingEnd="25dp" />

        <EditText
            android:id="@+id/input_time"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="25dp"
            android:hint="*Time:"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:fontFamily="cursive"
            android:background="#80000000"
            android:textSize="18sp"
            android:inputType="time"
            android:paddingStart="25dp"
            android:drawablePadding="10dp"
            android:paddingEnd="25dp" />

        <EditText
            android:id="@+id/input_party_size"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="25dp"
            android:hint="*Party Size:"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:fontFamily="cursive"
            android:background="#80000000"
            android:textSize="18sp"
            android:inputType="number"
            android:paddingStart="25dp"
            android:drawablePadding="10dp"
            android:paddingEnd="25dp" />

        <EditText
            android:id="@+id/input_phone"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="25dp"
            android:hint="*Phone Number:"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:fontFamily="cursive"
            android:background="#80000000"
            android:textSize="18sp"
            android:inputType="phone"
            android:paddingStart="25dp"
            android:paddingEnd="25dp" />

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="40dp"
            android:hint="*Name for order:"
            android:textColorHint="@android:color/white"
            android:fontFamily="cursive"
            android:textColor="@android:color/white"
            android:background="#80000000"
            android:textSize="18sp"
            android:inputType="textPersonName"
            android:paddingStart="25dp"
            android:paddingEnd="25dp" />

        <Button
            android:id="@+id/btn_book_now"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="Book Now"
            android:textColor="@android:color/white"
            android:fontFamily="cursive"
            android:background="#80000000"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>